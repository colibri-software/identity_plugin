<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :roles %><br />
    <%= f.select :role_ids,
      options_for_select(IdentityPlugin::Role.order_by(name: :asc).collect{|r| [r.name, r.id]}, @user.role_ids.first),
      {}, {}
    %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
